<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:singleLine="true"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="College email id"
        android:layout_marginTop="10dp"
        android:id="@+id/email"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Year eg. Y13"
        android:ems="10"
        android:maxLength="3"
        android:id="@+id/year"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cosha Committe Member"
        android:id="@+id/radioButton"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/year"
        android:layout_alignStart="@+id/year"
        android:checked="false" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Sign In"
        android:id="@+id/sign_in"
        android:layout_below="@+id/radioButton"
        android:layout_alignRight="@+id/year"
        android:layout_alignEnd="@+id/year"
        android:background="@color/colorSecondary"
        android:textColor="@color/white"
        android:layout_marginTop="80dp" />

</RelativeLayout>