<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


    </LinearLayout>


    <ImageView
        android:id="@+id/amul"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/amul_pic"
         />

    <TextView
        android:id="@+id/amul_text"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Amul"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/amul"
        android:layout_alignLeft="@+id/amul"
        android:layout_alignStart="@+id/amul" />

    <ImageView
        android:id="@+id/staionary"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/stationery_pic"
        android:layout_above="@+id/stationary_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/stationary_text"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Stationery"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/amul"
        android:layout_alignRight="@+id/staionary"
        android:layout_alignEnd="@+id/staionary" />

    <ImageView
        android:id="@+id/juice"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/food_barn"
        android:layout_below="@+id/amul_text"
         />

    <TextView
        android:id="@+id/juice_text"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:text="Food-Barn"
        android:textSize="20sp"
        android:layout_alignTop="@+id/laundry_text"
        android:layout_alignLeft="@+id/juice"
        android:layout_alignStart="@+id/juice" />

    <ImageView
        android:id="@+id/laundry"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/laundry_pic"
        android:layout_above="@+id/laundry_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/laundry_text"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:text="Laundry"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/juice"
        android:layout_alignRight="@+id/laundry"
        android:layout_alignEnd="@+id/laundry" />

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/button_complaint"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:background="@color/colorPrimary"
        materialdesign:iconDrawable="@mipmap/ic_add_white_24dp"
        android:layout_below="@+id/laundry_text"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/laundry"
        android:layout_alignEnd="@+id/laundry" />

    <ImageView
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:id="@+id/imageView"
        android:background="@mipmap/soft_drink_pic"
        android:layout_below="@+id/amul_text"
        android:layout_toLeftOf="@+id/laundry"
        android:layout_toRightOf="@+id/juice"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Juice"
        android:textSize="20sp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/juice_text"
        android:layout_toEndOf="@+id/juice_text" />


</RelativeLayout>